{{#each posts}}
 <div class="content-article conatiner">
        <div class="info-user">
            <span class="user">
                <img src="https://www.un.org/sites/un2.un.org/files/user.png" alt="users" class="user-logo">
                <a href="#">diyor_user</a>
            </span>
            <span class="date-post">сегодня в 11:41</span>
        </div>
        <div class="subject">
            <a href="#">
                <h3>Hyundai займётся выпуском шагающих машин</h3>
            </a>

        </div>
        <div class="tegs">
