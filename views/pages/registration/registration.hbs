 <section class="signup">
     <div class="container">
         <div class="signup-content">
             <div class="signup-form">
                 <h2 class="form-title">Регистрация</h2>
                     {{#each messages}}
                      <li>{{this}}</li>
                      {{/each}}
                 <form method="POST" action="/auth/registration" class="register-form" id="register-form">
                     <div class="form-group valids">
                         <label for="name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                         <input min="2" max="20" type="text" name="name" id="name" placeholder="Имя" />
                     </div>
                     <div class="form-group valids">
                         <label for="email"><i class="zmdi zmdi-email"></i></label>
                         <input min="5" max="50" type="email" name="email" id="email" placeholder="Email" />
                     </div>
                     <div class="form-group valids">
                         <label for="pass"><i class="zmdi zmdi-lock"></i></label>
                         <input  min="5" max="80" type="password" name="password" id="pass" placeholder="Пароль" />
                     </div>
                     <div class="form-group valids">
                         <label for="re-pass"><i class="zmdi zmdi-lock-outline"></i></label>
                         <input min="5" max="80" type="password" name="re_password" id="re_pass" placeholder="Повторите свой пароль" />
                     </div>
                     <div class="form-group">
                         <input type="checkbox" name="agree-term" id="agree-term" class="agree-term" />
                         <label for="agree-term" class="label-agree-term"><span><span></span></span>Я согласен со всеми
                                <a href="#" class="term-service">условиями использования</a></label>
                     </div>
                     <div class="form-group form-button">
                         <input type="submit" class="form-submit" />
                     </div>
                 </form> 
             </div>
             <div class="signup-image">
                 <figure><img src="../images/signup-image.jpg" alt="sing up image"></figure>
                 <a href="/auth/login" class="signup-image-link">У меня есть аккаунт</a>
             </div>
         </div>
     </div>
 </section>